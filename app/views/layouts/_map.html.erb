<div id="map"></div>
<script>
  function initMap() {
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 16,
      center: {
        lat: -3.786525,
        lng: -38.553052
      },
      scrollwheel: false
    });

    var image = "img/pin.png";
    var beachMarker = new google.maps.Marker({
      position: {
        lat: -3.786525,
        lng: -38.553052
      },
      map: map,
      icon: image
    });

  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA-y-EOAl92syed-MpXoLdUMk4CLltduY8&callback=initMap"></script>
