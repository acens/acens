<%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>

<!-- <form id="form_contact" role="form" method="post"> -->
  <div class="form-group">
    <%= f.text_field :name, required: true, placeholder: "Seu nome", class: "form-control input-lg" %>
    <!-- <input id="name" type="text" class="form-control input-lg" placeholder="Nome" required="" name="name"> -->
  </div>
  <div class="form-group">
    <%= f.text_field :email, required: true, placeholder: "E-mail", class: "form-control input-lg" %>
    <!-- <input id="email" type="email" class="form-control input-lg" placeholder="E-mail" required="" name="email"> -->
  </div>
  <div class="form-group">
    <%= f.text_field :subject, required: true, placeholder: "Assunto", class: "form-control input-lg" %>
    <!-- <input id="subject" type="text" class="form-control input-lg" placeholder="Assunto" required="" name="subject"> -->
  </div>
  <div class="form-group">
    <%= f.text_area :message, :as => :text, required: true, placeholder: "Mensagem", class: "form-control input-lg", rows: 5 %>
    <!-- <textarea id="message" class="form-control input-lg" rows="5" placeholder="Mensagem" required="" name="message"></textarea> -->
  </div>

  <%= f.submit "Enviar", class: "btn btn-white btn-lg wow bounceInRight", "data-wow-delay": "0.7s" %>
  <!-- <button type="submit" class="btn btn-blank btn-lg wow bounceInRight" data-wow-delay="0.8s">Enviar</button> -->
<!-- </form> -->

<% end %>
